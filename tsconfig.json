{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "declaration": true,
    "noEmit": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types",
      "src/**/*"
    ],
    "lib": [ "dom", "es2015" ],
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "spec"
  ]
}